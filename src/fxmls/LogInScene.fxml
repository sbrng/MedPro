<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>


<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="controllers.ControllerLogInScene">
   <children>
      <Pane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #1d1d1d;">
         <children>
            <Label layoutX="275.0" layoutY="76.0" text="Log In" textFill="#c5c5c5">
               <font>
                  <Font name="Copperplate Gothic Light" size="75.0" />
               </font>
            </Label>
            <TextField fx:id="usernameInput" layoutX="328.0" layoutY="224.0" />
            <PasswordField fx:id="passwordInput" layoutX="328.0" layoutY="293.0" />
            <Label layoutX="326.0" layoutY="207.0" text="Username:" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Label layoutX="327.0" layoutY="273.0" text="Password:" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Button fx:id="submitButton" layoutX="329.0" layoutY="365.0" mnemonicParsing="false" style="-fx-background-radius: 20;" text="Submit">
               <font>
                  <Font name="Castellar" size="12.0" />
               </font>
            </Button>
            <Button fx:id="goBack" layoutX="400.0" layoutY="365.0" mnemonicParsing="false" onAction="#goToLastScene" style="-fx-background-radius: 20;" text="Go Back">
               <font>
                  <Font name="Castellar" size="12.0" />
               </font>
            </Button>
            <CheckBox fx:id="checkBox" layoutX="329.0" layoutY="330.0" mnemonicParsing="false" text="Keep me connected" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </CheckBox>
         </children>
      </Pane>
   </children>
</AnchorPane>
